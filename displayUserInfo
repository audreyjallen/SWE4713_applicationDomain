function displayUserInfo(username, pictureUrl) {
  // Get the HTML elements for the username and picture
  const usernameElement = document.getElementById("username");
  const pictureElement = document.getElementById("picture");

  // Update the HTML elements with the user's information
  usernameElement.textContent = username;
  pictureElement.src = pictureUrl;
}

// Example usage
const username = "johndoe";
const pictureUrl = "https://example.com/johndoe.jpg";
displayUserInfo(username, pictureUrl);